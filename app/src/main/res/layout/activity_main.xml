<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/selection_element"
            android:layout_marginTop="20dp"
            android:textAlignment="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_below="@+id/textView">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                        <ImageButton
                            android:id="@+id/imageButtonPlanets"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="40dp"
                            app:srcCompat="@mipmap/planet"
                            android:background="@android:color/holo_green_light"/>
                        <ImageButton
                            android:id="@+id/imageButtonVehicles"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="40dp"
                            app:srcCompat="@mipmap/vehicles"
                            android:background="@android:color/holo_blue_dark"
                            android:layout_below="@+id/imageButtonPlanets"/>
                        <ImageButton
                            android:id="@+id/imageButtonPeople"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="40dp"
                            app:srcCompat="@mipmap/yoda"
                            android:background="@android:color/holo_red_light"
                            android:layout_below="@+id/imageButtonVehicles"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                        <ImageButton
                            android:id="@+id/imageButtonSpaceships"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="20dp"
                            app:srcCompat="@mipmap/spaceship"
                            android:background="@android:color/holo_purple"/>

                        <ImageButton
                            android:id="@+id/imageButtonFilms"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="20dp"
                            app:srcCompat="@mipmap/movies"
                            android:background="@android:color/darker_gray"
                            android:layout_below="@+id/imageButtonSpaceships"/>
                        <ImageButton
                            android:id="@+id/imageButtonSpecies"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="20dp"
                            app:srcCompat="@mipmap/species"
                            android:background="@android:color/holo_orange_dark"
                            android:layout_below="@+id/imageButtonFilms"/>

                </RelativeLayout>
        </LinearLayout>



</RelativeLayout>
